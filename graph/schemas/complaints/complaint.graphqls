interface Complaint {
    id: String!
    author: User!
    text: String!
    createdAt: Int64!
    deletedAt: Int64
    violationTypeCode: String!
    complaintStatus: ComplaintStatus!
}

enum ComplaintStatus {
    active
    closed
    refused
}

input NewComplaint {
    text: String! @maxLength(value: 10000)
    violationTypeCode: String! @maxLength(value: 100) @notEmptyString
}

extend type Query {
    getMyActiveComplaints: [Complaint!]! @authenticated
    getMyClosedComplaints: [Complaint!]! @authenticated
    getMyRefusedComplaints: [Complaint!]! @authenticated
}