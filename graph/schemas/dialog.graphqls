type Dialog {
    id: String!
    userDialogWith: User!
    isNotificationOn: Boolean!
    lastMessage: Message!
}

input ToggleNotificationData {
    state: Boolean!
}

extend type Mutation {
    deleteDialog(dialogIdHolder: IdHolder): DeleteResult! @authenticated
    toggleDialogNotification(stateHolder: ToggleNotificationData): Boolean! @authenticated
}

extend type Query {
    getMyDialogs(paginationSettings: ListPaginationSettings!): [Dialog!]! @authenticated
}