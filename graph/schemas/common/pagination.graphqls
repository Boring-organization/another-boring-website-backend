input ListPaginationSettings {
    count: Int64! @minValue(value: 1) @maxValue(value: 1000)
    lastItemId: String! @maxLength(value: 100) @notEmptyString
    ascending: Boolean! = true
}

input ListByTimeSortPaginationSettings {
    count: Int64! @minValue(value: 1) @maxValue(value: 1000)
    lastItemCreatedAt: Int64! @minValue(value: 0)
    ascending: Boolean! = true
}
